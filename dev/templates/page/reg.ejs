<div class="container" id = "parent">
    <div id="floater"></div>
    <div id="child">
        <center><h1>CLOUD LOGISTICS</h1></center>
        <center><p>Регистрация</p></center>
        <div >
            <div class="ui input">
                <input id = "firstname" type="text" placeholder="Имя">
            </div>
        </div>
        <div >
            <div class="ui input">
                <input id = "secondname" type="text" placeholder="Фамилия">
            </div>
        </div>
        <div>
            <div class="ui input">
                <input id = "mail" type="email" placeholder="E-mail">
            </div>
        </div>
        <div >
            <div class="ui input">
                <input id = "phone" type="text" placeholder="Телефон" value="">
            </div>
        </div>
        <div >
            <div class="ui input">
                <input id = "pas" type="password" placeholder="Пароль">
            </div>
        </div>
        <div class="f_p_div"><a href="#" class="forgot_pas">Забыл пароль</a> <span class="f_p">|</span> <a class="forgot_pas" href="/">Вход</a> </div>
        <div><input class="log_in_button" type="button" value="Регистрация"></div>

    </div>
    <div class = "transition_right" title="Регистация">
        <span class="transition_right_arrow">➤</span>
    </div>
</div>

<script src="js/classie.js"></script>
<script>

    $(document).keyup(function(e) {
        switch(e.which){
            case 37:
                $(location).attr('href','/');
                break;
        }
    });

    $(document).on('click', '.transition_right',function () {
        $(location).attr('href','/');
    });

    (function() {
        if (!String.prototype.trim) {
            (function() {
                var rtrim = /^[\s\uFEFF\xA0]+|[\s\uFEFF\xA0]+$/g;
                String.prototype.trim = function() {
                    return this.replace(rtrim, '');
                };
            })();
        }

        [].slice.call( document.querySelectorAll( 'input.input__field' ) ).forEach( function( inputEl ) {
            if( inputEl.value.trim() !== '' ) {
                classie.add( inputEl.parentNode, 'input--filled' );
            }

            inputEl.addEventListener( 'focus', onInputFocus );
            inputEl.addEventListener( 'blur', onInputBlur );
        } );

        function onInputFocus( ev ) {
            classie.add( ev.target.parentNode, 'input--filled' );
        }

        function onInputBlur( ev ) {
            if( ev.target.value.trim() === '' ) {
                classie.remove( ev.target.parentNode, 'input--filled' );
            }
        }
    })();
</script>
<script src = "js/reg_validate.js"></script>