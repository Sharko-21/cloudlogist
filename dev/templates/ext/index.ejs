        <div><a href="#" class="forgot_pas">Забыл пароль</a> <span class="f_p">|</span> <a class="forgot_pas" href="/reg">Регистрация</a> </div>
        <div><input class="log_in_button" id = "log_in" type="button" value="Войти"></div>
    </div>
</div>

<script>
    $('#log_in').on('click', function () {
        var mail = $('#mail').val();
        var pas= $('#pas').val();

        $.ajax({
            url: '/ajax',
            type: 'POST',
            data: ({mail: mail, pas: pas}),
            dataType: 'json',
            success: function funcSuc(data) {
                console.log('success');
                console.log(data);
                location.reload();
            }
        });
    });
</script>