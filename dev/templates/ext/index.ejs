<div class="container" id = "parent">
    <div id="floater"></div>
    <div id="child">
        <center><h1>CLOUD LOGISTICS</h1></center>
        <center><p>Вход</p></center>
        <div>
            <div class="ui input">
                <input type="text" id = "mail" placeholder="E-mail">
            </div>
        </div>
        <div >
            <div class="ui input">
                <input type="password" id = "pas" placeholder="Пароль">
